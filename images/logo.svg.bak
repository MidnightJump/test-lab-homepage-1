<svg xmlns="http://www.w3.org/2000/svg" viewBox="-40 -60 80 100">
  <defs>
    <linearGradient id="brainGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1d4ed8;stop-opacity:1" />
    </linearGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- 六边形外框 -->
  <path
    fill="none"
    stroke="currentColor"
    stroke-width="3"
    d="
      M 0 -25
      L -21.65 -12.5
      L -21.65 12.5
      L 0 25
      L 21.65 12.5
      L 21.65 -12.5
      Z
    "
  />
  
  <!-- 大脑形状 -->
  <g filter="url(#glow)">
    <!-- 左脑半球 -->
    <path
      fill="url(#brainGradient)"
      d="
        M -15 -8
        Q -18 -5, -18 0
        Q -18 5, -15 8
        Q -12 10, -8 10
        Q -5 8, -5 5
        Q -5 2, -8 0
        Q -5 -2, -5 -5
        Q -5 -8, -8 -10
        Q -12 -10, -15 -8
        Z
      "
    />
    
    <!-- 右脑半球 -->
    <path
      fill="url(#brainGradient)"
      d="
        M 15 -8
        Q 18 -5, 18 0
        Q 18 5, 15 8
        Q 12 10, 8 10
        Q 5 8, 5 5
        Q 5 2, 8 0
        Q 5 -2, 5 -5
        Q 5 -8, 8 -10
        Q 12 -10, 15 -8
        Z
      "
    />
    
    <!-- 大脑连接部分 -->
    <path
      fill="url(#brainGradient)"
      d="
        M -5 0
        Q -3 2, 0 2
        Q 3 2, 5 0
        Q 3 -2, 0 -2
        Q -3 -2, -5 0
        Z
      "
    />
  </g>
  
  <!-- 装饰性连接线 -->
  <path
    fill="none"
    stroke="#3b82f6"
    stroke-width="1"
    opacity="0.6"
    d="
      M -10 -15
      L 10 -15
      M -8 15
      L 8 15
    "
  />
  
  <!-- 顶部装饰线 -->
  <path
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    d="
      M -15 -35
      L 15 -35
    "
  />
</svg>
